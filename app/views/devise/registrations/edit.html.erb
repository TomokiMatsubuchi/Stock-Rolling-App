<h2>myaccount</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, '名前' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :line_alert, 'Line通知機能' %>
    <%= f.check_box :line_alert %>
  </div>

  <div class="field">
    <%= f.label :ec_login_id, 'ログインID' %>
    <%= f.email_field :ec_login_id %>
  </div>

  <div class="field">
    <%= f.label :ec_login_password, 'パスワード' %>
    <%= f.password_field :ec_login_password %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
